# Telegram Automation Tool - Environment Configuration
# Copy this file to .env and update the values as needed

# Browser Configuration
# Set to "true" to use Enhanced Browser with tab management, screenshots, and console logs
# Set to "false" to use basic browser
USE_ENHANCED_BROWSER=true

# Optional: Custom browser timeout (milliseconds)
# BROWSER_TIMEOUT=30000

# Optional: Headless mode (set to "true" to run browser in headless mode)
# Note: Not recommended for first-time login as OTP input is required
# HEADLESS=false

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Optional: Custom paths
# SESSIONS_DIR=./sessions
# NOTES_DIR=./notes
# REPORTS_DIR=./reports
# TELEGRAM_RUNS_DIR=./telegram_runs
